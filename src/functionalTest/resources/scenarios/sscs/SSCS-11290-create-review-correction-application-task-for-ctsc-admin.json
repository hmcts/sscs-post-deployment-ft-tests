{
  "description": "Review Correction Application",
  "enabled": true,
  "jurisdiction": "SSCS",
  "caseType": "Benefit",
  "options": {
    "taskRetrievalApi": "task-management-api"
  },
  "required": {
    "credentials": {
      "key": "systemupdate"
    },
    "ccd": [
      {
        "eventId": "validAppealCreated",
        "caseData": {
          "template": "minimal-sscs-benefit-appeal.json",
          "replacements": {
          }
        }
      }
    ]
  },
  "tests": [
    {
      "request": {
        "credentials": {
          "key": "caseworker"
        },
        "input": {
          "eventMessages": [
            {
              "destination": "RestEndpoint",
              "template": "minimal-ccd-event-message.json",
              "replacements": {
                "EventId": "actionFurtherEvidence",
                "AdditionalData": {
                  "Data": {
                   "postEventState" : "dormant",
                    "scannedDocumentTypes": [
                      "correctionApplication"
                    ],
                    "workType": "postHearingWork",
                    "action": "adminActionCorrection"
                  }
                }
              }
            }
          ]
        }
      },
      "expectations": [
        {
          "credentials": {
            "key": "CTSC"
          },
          "status": 200,
          "numberOfTasksAvailable": 1,
          "taskData": {
            "template": "minimal-task-response.json",
            "replacements": {
              "tasks": [
                {
                  "test_meta_data": [
                    {
                      "key": "role_data_reference",
                      "value": "reviewCorrectionApplicationAdmin"
                    }
                  ],
                  "type": "reviewCorrectionApplicationAdmin",
                  "name": "Review Correction Application",
                  "work_type_id": "post_hearing",
                  "description": "[Admin - action correction](/case/SSCS/Benefit/${[CASE_REFERENCE]}/trigger/adminActionCorrection)<br/>[Correction Sent to Judge](/case/SSCS/Benefit/${[CASE_REFERENCE]}/trigger/adminCorrectionBody)",
                  "role_category": "CTSC",
                  "major_priority": 3000,
                  "minor_priority": 300
                }
              ]
            }
          },
          "roleData": [
            {
              "key": "reviewCorrectionApplicationAdmin",
              "numberOfRolesAvailable": 5,
              "roles": [
                {
                  "role_category": null,
                  "role_name": "case-allocator",
                  "permissions": [ "Read", "Manage", "Complete", "Cancel", "Assign", "Unassign", "Claim", "Unclaim" ],
                  "authorisations": []
                },
                {
                  "role_category": "CTSC",
                  "role_name": "allocated-ctsc-caseworker",
                  "permissions": [ "Read", "Own", "Claim", "Unclaim", "Manage", "UnclaimAssign" ],
                  "authorisations": []
                },
                {
                  "role_category": "CTSC",
                  "role_name": "ctsc-administrator",
                  "permissions": [ "Read", "Own", "Claim", "Unclaim", "Manage", "UnclaimAssign" ],
                  "authorisations": []
                },
                {
                  "role_category": "CTSC",
                  "role_name": "ctsc-team-leader",
                  "permissions": [ "Read", "Own", "Claim", "Unclaim", "Manage", "UnclaimAssign", "Assign", "Unassign", "Cancel", "Complete" ],
                  "authorisations": []
                },
                {
                  "role_category": null,
                  "role_name": "task-supervisor",
                  "permissions": [ "Read", "Manage", "Complete", "Cancel", "Assign", "Unassign", "Claim", "Unclaim" ],
                  "authorisations": []
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
