    "taskRetrievalApi": "task-management-api"
  },
  "required": {
    "credentials": "SSCSSystemUpdateUser",
    "ccd": {
      "eventId": "appealCreated",
      "state": "appealCreated",
      "caseData": {
        "template": "valid-appeal.json",
        "replacements": {
          "appeal": {
            "mrnDetails": {
              "dwpIssuingOffice": "DWP PIP (1)",
