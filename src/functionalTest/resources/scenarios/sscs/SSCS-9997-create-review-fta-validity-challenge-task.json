              "role_category": "LEGAL_OPERATIONS",
              "description": "Description of what needs to be done to complete the task",
              "warning_list": {
                "values": [

                ]
              },
              "work_type_id": "routine_work",
              "permissions": {
                "values": [
                  "Read",
                  "Refer",
                  "Own",
                  "Manage",
                  "Cancel"
