{
  "description": "create review application and allocate judge task",
  "enabled": true,
  "jurisdiction": "SSCS",
  "caseType": "Benefit",
  "options": {
    "taskRetrievalApi": "task-management-api"
  },
  "required": {
    "credentials": {
      "key": "systemupdate"
    },
    "ccd": [
      {
        "eventId": "permissionToAppealRequest",
        "caseData": {
          "template": "minimal-sscs-benefit-appeal.json",
          "replacements": {
          }
        }
      }
    ]

  },
  "tests": [
    {
      "request": {
        "credentials": {
          "key": "caseworker"
        },
        "input": {
          "eventMessages": [
            {
              "destination": "RestEndpoint",
              "template": "minimal-ccd-event-message.json",
              "replacements": {
                "EventId": "permissionToAppealRequest",
                "NewStateId": "dormantAppealState"
              }
            }
          ]
        }
      },
      "expectations": [
        {
          "credentials": {
            "key": "CTSC-Administrator"
          },
          "status": 200,
          "numberOfTasksAvailable": 1,
          "taskData": {
            "template": "minimal-task-response.json",
            "replacements": {
              "tasks": [
                {
                  "test_meta_data": [
                    {
                      "key": "role_data_reference",
                      "value": "reviewApplicationAndAllocateJudge"
                    }
                  ],
                  "type": "reviewApplicationAndAllocateJudge",
                  "name": "Review Application And Allocate Judge",
                  "role_category": "CTSC",
                  "minor_priority": 300,
                  "major_priority": 3000
                }
              ]
            }
          },
          "roleData": [
            {
              "key": "reviewApplicationAndAllocateJudge",
              "numberOfRolesAvailable": 5,
              "roles": [
                {
                  "role_category": "CTSC",
                  "role_name": "allocated-ctsc-caseworker",
                  "permissions": [ "Read","Own","Claim","Unclaim","Manage","UnclaimAssign","CancelOwn","CompleteOwn"],
                  "authorisations": []
                },
                {
                  "role_name": "case-allocator",
                  "permissions": [ "Read", "Manage", "Complete", "Cancel", "Assign", "Unassign", "Claim", "Unclaim" ],
                  "authorisations": []
                },
                {
                  "role_category": "CTSC",
                  "role_name": "ctsc",
                  "permissions": [ "Read","Own","Claim","Unclaim","Manage","UnclaimAssign","CancelOwn","CompleteOwn" ],
                  "authorisations": []
                },
                {
                  "role_category": "CTSC",
                  "role_name": "ctsc-team-leader",
                  "permissions": [ "Read","Own","Claim","Unclaim","Manage","Assign","Unassign","CancelOwn","CompleteOwn" ],
                  "authorisations": []
                },
                {
                  "role_name": "task-supervisor",
                  "permissions": [ "Read", "Manage", "Complete", "Cancel", "Assign", "Unassign", "Claim", "Unclaim" ],
                  "authorisations": []
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
