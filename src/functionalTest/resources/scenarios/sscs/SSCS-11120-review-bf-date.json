          "roleData": [
            {
              "key": "reviewBfDate",
              "numberOfRolesAvailable": 5,
              "roles": [
                {
                  "role_category": "CTSC",
                  "role_name": "allocated-ctsc-caseworker",
                  "permissions": [ "Read", "Own", "Claim", "Unclaim", "Manage", "UnclaimAssign" ],
