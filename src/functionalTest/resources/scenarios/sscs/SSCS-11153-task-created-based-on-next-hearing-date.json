{
  "description": "correct priority and hearing date",
  "enabled": true,
  "jurisdiction": "SSCS",
  "caseType": "Benefit",
  "options": {
    "taskRetrievalApi": "task-management-api"
  },
  "required": {
    "credentials": {
      "key": "superuser"
    },
    "ccd": [
      {
        "eventId": "incompleteApplicationReceived",
        "caseData": {
          "template": "minimal-sscs-benefit-appeal.json",
          "replacements": {
            "hearings": [
              {
                "value": {
                  "hearingId": "1111111",
                  "hearingDate": "{$TODAY-14}"
                }
              },
              {
                "value": {
                  "hearingId": "2222222",
                  "hearingDate": "{$TODAY+14}"
                }
              },
              {
                "value": {
                  "hearingId": "3333333",
                  "hearingDate": "{$TODAY+28}"
                }
              }
            ]
          }
        }
      }
    ]
  },
  "tests": [
    {
      "request": {
        "credentials": {
          "key": "caseworker"
        },
        "input": {
          "eventMessages": [
            {
              "destination": "RestEndpoint",
              "template": "minimal-ccd-event-message.json",
              "replacements": {
                "EventId": "incompleteApplicationReceived"
              }
            }
          ]
        }
      },
      "expectations": [
        {
          "credentials": {
            "key": "CTSC-Administrator"
          },
          "status": 200,
          "numberOfTasksAvailable": 1,
          "taskData": {
            "template": "minimal-task-response.json",
            "replacements": {
              "tasks": [
                {
                  "test_meta_data": [
                    {
                      "key": "role_data_reference",
                      "value": "reviewIncompleteAppeal"
                    }
                  ],
                  "type": "reviewIncompleteAppeal",
                  "name": "Review Incomplete Appeal",
                  "role_category": "CTSC",
                  "description": "[Request Information From Party](/case/SSCS/Benefit/${[CASE_REFERENCE]}/trigger/requestForInformation)",
                  "priority_date": "{$TODAY+4}T16:00:00+0000",
                  "next_hearing_id": "2222222",
                  "next_hearing_date": "{$TODAY+14}T16:00:00+0000"
                }
              ]
            }
          },
          "roleData": [
            {
              "key": "reviewIncompleteAppeal",
              "numberOfRolesAvailable": 5,
              "roles": [
                {
                  "role_category": "CTSC",
                  "role_name": "allocated-ctsc-caseworker",
                  "permissions": [ "Read", "Own", "Claim", "Unclaim", "Manage", "UnclaimAssign" ],
                  "authorisations": []
                },
                {
                  "role_name": "case-allocator",
                  "permissions": [ "Read", "Manage", "Complete", "Cancel", "Assign", "Unassign", "Claim", "Unclaim" ],
                  "authorisations": []
                },
                {
                  "role_category": "CTSC",
                  "role_name": "ctsc",
                  "permissions": [ "Read", "Own", "Claim", "Unclaim", "Manage", "UnclaimAssign" ],
                  "authorisations": []
                },
                {
                  "role_category": "CTSC",
                  "role_name": "ctsc-team-leader",
                  "permissions": [ "Read", "Own", "Claim", "Unclaim", "Manage", "UnclaimAssign", "Assign", "Unassign", "Cancel" ],
                  "authorisations": []
                },
                {
                  "role_name": "task-supervisor",
                  "permissions": [ "Read", "Manage", "Complete", "Cancel", "Assign", "Unassign", "Claim", "Unclaim" ],
                  "authorisations": []
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
